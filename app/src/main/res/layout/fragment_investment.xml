<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- Testo per il saldo medio e campo di input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/saldo_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Medio Trimestrale:"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/saldo_cifra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint=""
                android:textColor="@color/colorNeutral"
                android:textSize="17dp"/>
        </LinearLayout>

        <!-- Scelta del livello di rischio -->
        <TextView
            android:id="@+id/livello_rischio_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleziona il livello di rischio:"
            android:layout_marginTop="16dp"
            android:textSize="17dp"/>

        <RadioGroup
            android:id="@+id/radio_group_rischio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rischio_basso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basso"
                android:textSize="17dp"/>

            <RadioButton
                android:id="@+id/rischio_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio"
                android:textSize="17dp"/>

            <RadioButton
                android:id="@+id/rischio_alto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alto"
                android:textSize="17dp"/>
        </RadioGroup>

        <!-- Testo per la cifra da investire e campo di input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/cifra_investire_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QuantitÃ  da investire:"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/cifra_investimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:inputType="numberDecimal"
                android:hint=" "
                android:textSize="17dp"/>
        </LinearLayout>

        <!-- Spinner per la durata dell'investimento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/data_investire_label"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:text="Durata Investimento:"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/periodo_spinner"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Piano d'investimento"
            android:textColor="@color/white"
            android:textSize="17dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/lavanda"
                android:stretchColumns="1,2,3,4,5"
                >

                <!-- Intestazione della tabella -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/transactionAmountTitle"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Valore"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/transactionPercentageTitle"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Risk"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/transactionDateTitle"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Data"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />


                </TableRow>

                <!-- Riga 1 per "Azioni" - Valore d'acquisto -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp">

                    <TextView
                        android:id="@+id/azioni_valore_acquisto"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="8dp"
                        android:text="_______" />

                    <TextView
                        android:id="@+id/azioni_percentuale_rischio"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0%" />

                    <TextView
                        android:id="@+id/azioni_data_acquisto"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="DD/MM/YYYY" />


                </TableRow>

                <!-- Riga 2 per "Azioni" - Valore attuale -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/azioni_valore_attuale"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                        android:padding="8dp"
                        android:text="_______" />

                    <TextView
                        android:id="@+id/azioni_percentuale_rendimento"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0%" />

                    <TextView
                        android:id="@+id/azioni_data_attuale"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="DD/MM/YYYY" />


                </TableRow>

                <!-- Riga 1 per "Crypto" - Valore d'acquisto -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/crypto_valore_acquisto"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"

                        android:padding="8dp"
                        android:text="_______" />

                    <TextView
                        android:id="@+id/crypto_percentuale_rischio"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0%" />

                    <TextView
                        android:id="@+id/crypto_data_acquisto"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="DD/MM/YYYY" />
                </TableRow>

                <!-- Riga 2 per "Crypto" - Valore attuale -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/crypto_valore_attuale"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="8dp"
                        android:text="_______" />

                    <TextView
                        android:id="@+id/crypto_percentuale_rendimento"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0%" />

                    <TextView
                        android:id="@+id/crypto_data_attuale"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="DD/MM/YYYY" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/azioni_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:text="Dettagli"
                    android:textSize="10dp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/crypto_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dettagli"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:textSize="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Azioni -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/azioni_label"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Azioni:"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/azioni_cifra"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="____________"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/azioni_fattore_rischio"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="17dp"
                android:text="0%"
                android:gravity="right"/>


        </LinearLayout>

        <!-- Fondi -->
        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crypto_label"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Crypto:"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/crypto_cifra"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="____________"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/crypto_fattore_rischio"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="17dp"
                android:text="0%"
                android:gravity="right"/>


        </LinearLayout>


    </LinearLayout>
</layout>

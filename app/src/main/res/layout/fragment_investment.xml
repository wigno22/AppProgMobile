<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- Testo per il saldo medio e campo di input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/saldo_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Medio Trimestrale:"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/saldo_cifra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint=""
                android:textColor="@color/colorNeutral"
                android:textSize="17dp"/>
        </LinearLayout>

        <!-- Scelta del livello di rischio -->
        <TextView
            android:id="@+id/livello_rischio_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleziona il livello di rischio:"
            android:layout_marginTop="16dp"
            android:textSize="17dp"/>

        <RadioGroup
            android:id="@+id/radio_group_rischio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rischio_basso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basso"
                android:textSize="17dp"/>

            <RadioButton
                android:id="@+id/rischio_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio"
                android:textSize="17dp"/>

            <RadioButton
                android:id="@+id/rischio_alto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alto"
                android:textSize="17dp"/>
        </RadioGroup>

        <!-- Testo per la cifra da investire e campo di input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/cifra_investire_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QuantitÃ  da investire:"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/cifra_investimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:inputType="numberDecimal"
                android:hint=" "
                android:textSize="17dp"/>
        </LinearLayout>

        <!-- Spinner per la durata dell'investimento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/data_investire_label"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:text="Durata Investimento:"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/periodo_spinner"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Visualizza Piano d'investimento"
            android:textSize="17dp"/>

        <!-- Azioni -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/azioni_label"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="Azioni:"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/azioni_cifra"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="____________"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/azioni_fattore_rischio"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="17dp" />

            <!-- Bottone per visualizzare le azioni -->
            <Button
                android:id="@+id/azioni_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vedi Azioni"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Fondi -->
        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crypto_label"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Crypto:"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/crypto_cifra"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="____________"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/crypto_fattore_rischio"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="17dp" />

            <!-- Bottone per visualizzare i fondi -->
            <Button
                android:id="@+id/crypto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vedi Crypto"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
        </LinearLayout>



    </LinearLayout>
</layout>

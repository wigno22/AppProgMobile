
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.progettoprogrammazionemobile.DataViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:padding="0dp">



    <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="Log-Out"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tname"
                android:layout_width="188dp"
                android:layout_height="42dp"
                android:gravity="left"
                android:text="Name"
                android:textSize="20sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/Tsurname"
                android:layout_width="188dp"
                android:layout_height="42dp"
                android:gravity="left"
                android:text="Surname"
                android:textSize="20sp"
                android:background="@drawable/border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Temail"
            android:layout_width="376dp"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="left"
            android:text="Email"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="214dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Phone Number:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Tphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fixed Outcome:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/TfixedOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Fixed Expenses"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="@{viewModel.fixedOut}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fixed Income:"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/TfixedIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fixed Income"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="@{viewModel.fixedEntries}" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Bsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/colorNeutral"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>
</LinearLayout>
</layout>